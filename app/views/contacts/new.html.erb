<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>
    
    <h2>お問い合わせ</h2>
    
    <%= form_for(@contact,url: confirm_contacts_path) do |f| %>
      <% if @contact.errors.any? %>
        <div id="error_explanation">
          <h2><%= @contact.errors.count %>件のエラーがあります。</h2>
    
          <ul>
          <% @contact.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      
      <%= f.label :名前 %>
      <%= f.text_field :name %>
      <br>
      <%= f.label :メールアドレス %>
      <%= f.text_field :email %>
      <br>
      <%= f.label :内容 %>
      <%= f.text_field :content %>
      <br>
      <%= f.submit '送信', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>